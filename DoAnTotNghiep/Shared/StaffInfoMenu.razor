@if (PermissionClaim.IsBusinessProfileMenuVisible())
{
    <Menu Theme="MenuTheme.Dark" Class="main_menu" Mode="MenuMode.Horizontal"
          DefaultSelectedKeys=@(new[] { "/thong-tin-nhan-su/ho-so-nhan-vien" }) TriggerSubMenuAction="@Trigger.Hover">
        @if (PermissionClaim.STAFFPROFILE_VIEW)
        {
            <MenuItem Key="/thong-tin-nhan-su/ho-so-nhan-vien" RouterLink="/thong-tin-nhan-su/ho-so-nhan-vien" RouterMatch="NavLinkMatch.All">
                Hồ sơ nhân viên
            </MenuItem>
        }
        @if (PermissionClaim.DISCIPLINE_BONUS_VIEW)
        {
            <MenuItem Key="/thong-tin-nhan-su/thong-tin-khen-thuong-ky-luat" RouterLink="/thong-tin-nhan-su/thong-tin-khen-thuong-ky-luat" RouterMatch="NavLinkMatch.All">
                Thông tin khen thưởng, kỷ luật
            </MenuItem>
        }
        @if (PermissionClaim.IsAllowanceMenuVisible())
        {
            <MenuItem Key="/thong-tin-nhan-su/phu-cap" RouterLink="/thong-tin-nhan-su/phu-cap" RouterMatch="NavLinkMatch.All">
                Phụ cấp
            </MenuItem>
        }
        <MenuItem Key="/thong-tin-nhan-su/thiet-lap/phu-cap-ke-khai-bao-hiem" RouterLink="/thong-tin-nhan-su/thiet-lap/phu-cap-ke-khai-bao-hiem" RouterMatch="NavLinkMatch.All">
            Thiết lập phụ cấp
        </MenuItem>
    </Menu>
}