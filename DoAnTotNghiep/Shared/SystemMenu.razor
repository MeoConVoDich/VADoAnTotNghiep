@if (PermissionClaim.IsSystemMenuVisible())
{
    <Menu Theme="MenuTheme.Dark" Class="main_menu" Mode="MenuMode.Horizontal"
          DefaultSelectedKeys=@(new[] { "/he-thong/nhom-quyen" }) TriggerSubMenuAction="@Trigger.Hover">
        @if (PermissionClaim.ROLE_VIEW)
        {
            <MenuItem Key="/he-thong/nhom-quyen" RouterLink="/he-thong/nhom-quyen" RouterMatch="NavLinkMatch.All">
                Nhóm quyền
            </MenuItem>
        }
        @if (PermissionClaim.ACCOUNT_VIEW)
        {
            <MenuItem Key="/he-thong/tai-khoan" RouterLink="/he-thong/tai-khoan" RouterMatch="NavLinkMatch.All">
                Tài khoản
            </MenuItem>
        }
    </Menu>
}